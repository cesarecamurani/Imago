<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title> Imago </title>
  </head>
  <body>

    <div class="col-lg-8 col-md-12 mb-lg-0 mb-4">
      <div class="card testimonial-card">
        <div class="card-up info-color"></div>
        <div class="card-body">
          <h4> New Imago: </h4>
          <hr>
          <h6> add a description: </h6>
          <%= form_for Post.new do |f| %>
          <div class="form-group">
            <%= f.text_area :description %>
          </div>

          <div class="form-group">
            <%= f.file_field :image %>
          </div>

          <div class="form-group">
            <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
          </div>
          <br>
          <div class="text-center">
            <%= f.submit 'Post', class: 'btn btn-light' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
    <br>
    <h2> Posts: </h2>

    <div class="posts">
      <% @posts.each do |post| %>
      <section class="post">
        <div class="user">
          <div class="avatar">
            <img src="https://image.ibb.co/hPKoao/penny.jpg">
              <%# <%= current_user.avatar.url %>
          </div>
          <div class="username">
            <h4><%= post.user.username %></h4>
          </div>

        </div>
        <%= image_tag post.image, class: 'main-image' %>
        <div class="description">
          <% post.description.to_s.split(' ').each do |word| %>
            <% if word.start_with?('#') %>
              <%= link_to word, search_path(query: word) %>
            <%else %>
              <%= word %>
            <%end %>
          <% end %>
          <hr>
          Posted at: <%= post.created_at.strftime("%H:%M on %d-%m-%Y") %>
          <hr>
          <% pre_like = Like.find_by(user_id: current_user.id, post_id: post) %>
          <% if pre_like %>
            <%= link_to 'Unlike', post_like_path(post, pre_like), method: :delete %>(<%= post.likes.count %>)
          <% else %>
            <%= link_to 'Like', post_likes_path(post), method: :post %>(<%= post.likes.count %>)
          <% end %>
        </div>
        </section>

        <% end %>
        <h6><%= paginate @posts %></h6>
      </div>
  </body>
</html>
